/* ---- Common ---- */
shadow-color(baseColor)
	alpha(darken(baseColor,50%),0.8)

paper-shadow(layer, baseColor)
	box-shadow: 0 0 layer*2px 0 shadow-color(baseColor)

paper(layer, baseColor, position=relative)
	background-color: baseColor
	paper-shadow: layer baseColor
	position: position
	z-index: layer

/* ---- Shadows ---- */
header
	paper: 2 #39635F fixed

.afe-bigbanner, .afe-bigbanner-non-index, footer
	paper: 1 white

