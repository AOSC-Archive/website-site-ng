    /* - Button - */

.am-btn-default {
	background-color: #19a7f0;}
.am-btn-default:hover,.am-btn-default:focus {
  background-color: #61BFEF;}
.am-btn-default:active,.am-btn-default.am-active {
	background-color: #0e93d7;}

.am-btn-primary {
	background-color: #19a7f0;}
.am-btn-primary:hover,.am-btn-primary:focus {
  background-color: #61BFEF;}
.am-btn-primary:active,.am-btn-primary.am-active {
	background-color: #0e93d7;}

.am-btn-secondary {
	background-color: #3bb4f2;}
.am-btn-secondary:hover,.am-btn-secondary:focus {
  background-color: #19a7f0;}
.am-btn-secondary:active,.am-btn-secondary.am-active {
	background-color: #0e93d7;}

.am-btn-default,
.am-btn-default:visited,
.am-btn-default:hover,
.am-btn-default:focus,
.am-btn-default:active,
.am-btn-default.am-active, {color: #ffffff;}

.am-btn-secondary,
.am-btn-secondary:visited,
.am-btn-primary:hover,
.am-btn-primary:focus,
.am-btn-primary:active,
.am-btn-primary.am-active, {color: #ffffff;}

.am-btn-secondary,
.am-btn-secondary:visited,
.am-btn-secondary:hover,
.am-btn-secondary:focus,
.am-btn-secondary:active,
.am-btn-secondary.am-active, {color: #ffffff;}

.am-btn {
	border: none;
	transition-duration: 100ms 100ms;
}
