extend ./templates/layout.jade

block title
  | Community Portal - More News
block append stylesheet
  link(rel='stylesheet', href='assets/css/index.css')
  link(rel='stylesheet', href='assets/css/news-flow.css')
block content
  .afe-bigbanner-non-index: .am-g.am-g-fixed.am-vertical-align: .am-vertical-align-middle.am-cf
    .am-u-md-12.am-u-md-offset-2
      h1 More News
      p.afe-bigbanner-text Read hard, get it all caught up! :-D
  #wrapper: .am-g.am-g-fixed
    .am-u-md-10.afe-news-flow
      h2.afe-littlecaption MORE NEWS AHEAD
      ul.afe-news
        each val, index in params.broadcast
            li(class="afe-news-tag-"+val.type): .afe-news-container
              if index<4
                h3=val.title
                p.afe-news-info
                  span.afe-news-date=val.date
                .afe-news-body
                  each para in val.content
                    !=para
              else if index>=4
                  a(href="#")
                    h3=val.title
                  span.afe-news-date=val.date
              hr
