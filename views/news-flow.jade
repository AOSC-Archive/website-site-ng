extend ./templates/layout.jade

block title
  | News Flow - AOSC
block append stylesheet
  link(rel='stylesheet', href='assets/css/news-flow.css')
block content
  .afe-bigbanner-non-index: .container: .row
    .col-md-9.col-md-offset-3
      h1 MORE NEWS
      p Read hard, get it all caught up! :-D
  #wrapper: .container: .row
    .col-md-10.afe-news-flow
      h2.afe-littlecaption MORE NEWS AHEAD
      ul.afe-main
        each val, index in params.broadcast
            li(class="afe-tag-"+val.type): .afe-main-item
              h3=val.title
              p.afe-main-item-subtitle=val.date
              .afe-main-item-body
                each para in val.content
                  !=para
            hr
