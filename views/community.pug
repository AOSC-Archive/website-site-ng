extend templates/master

include templates/flow-include
include templates/pagination-include
include templates/lightbox-include

block head-custom
  +meta-title("Community")
  +meta-description("Anthon Open Source Community")

append stylesheet
  +include-css("/assets/css/flow.css")
  +include-css("/assets/css/community.css")

block banner
  .row
    .col-md-12
      h1 COMMUNITY
      h2 Some latest intelligence about this group of Homo sapiens.
    .col-md-6
      p.
        Here you will find information about our latest and future community
        activities. AOSCC (Anthon Open Source Community Conference) for example,
        is our annual get-together where developers and friends of the community
        talk about the past and the coming year, and having fun hacking,
        or... not hacking.

block content
  #wrapper.row
    .col-md-8
      .clearfix
        h1.afe-small-captions RECENT ACTIVITIES
        +flow(params.items)
        +pagination(params.pages)
    #side-gallery.col-md-4
      h1.afe-small-captions PHOTOGRAPHS
      ul.popup-gallery
        each val in params.imgs
          li
            a(href=val.imgOrig, desc=val.desc, subdesc=val.date)
              img.afe-cover(src=val.imgThumb)
        // TODO: Make a gallery page

append stylesheet
  +lightbox-css()
append javascript
  +lightbox-js-flow()
  +lightbox-js-gallery()
