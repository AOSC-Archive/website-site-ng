extend ./templates/layout.jade

block title
  | About - AOSC
block append stylesheet
  link(rel='stylesheet', href='assets/css/about.css')
block content
  .afe-bigbanner-non-index: .container: .row
    .col-md-12
      h1 ABOUT
      p All about this community.
  #wrapper: .container: .row
    .col-md-8
      h2.afe-littlecaption THE STORY
      ul.afe-main
        each composition in params.about
          li(class="afe-tag-"+composition.type): .afe-main-item
            h3=composition.section
            .afe-main-item-body
              each para in composition.text
                p=para
            hr
    .col-md-3.col-md-offset-1
      h2.afe-littlecaption FIND US
      ul.afe-side
        each contact in params.contacts
          li
            .col-md-1(style="padding: 0px")
              case contact.type
                when "mail"
                  span.fa.fa-envelope-o(style="font-size: 40px")
                when "Twitter"
                  span.fa.fa-twitter(style="font-size: 40px")
                when "Sina Weibo"
                  span.fa.fa-weibo(style="font-size: 40px")
                when "QQ"
                  span.fa.fa-qq(style="font-size: 40px")
            .afe-side-item-body
              h3=contact.type
              case contact.type
                when "mail"
                  a(href="mailto: #{contact.way}")
                    p=contact.way
                when "Twitter"
                  a(href="https://twitter.com/aosc_dev")
                    p=contact.way
                when "Sina Weibo"
                  a(href="http://weibo.com/anthondev")
                    p=contact.way
                when "QQ"
                  a(href="http://jq.qq.com/?_wv=1027&k=dOxFcX")
                    p=contact.way
