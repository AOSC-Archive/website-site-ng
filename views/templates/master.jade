block append javascript
  script.
    var navHeight, floatBannerTop, floatBannerStatus;
    
    $(document).ready(function() {
      
      if($("#flag-not-extend-banner-floating").length == 0) {
        floatBannerStatus = false;
        
        $(window).resize(function() {
          navHeight = $(".afe-nav").height();
          floatBannerTop = $(".afe-floating-banner").offset().top;
          $(document).scroll()
        }); $(window).resize();
        
        $(".afe-static-banner").show();
        $(".afe-floating-banner").hide();
        
        $(document).scroll(function() {
          if((!floatBannerStatus && $(document).scrollTop() + navHeight >  floatBannerTop) ||
             ( floatBannerStatus && $(document).scrollTop() + navHeight <= floatBannerTop)) {
            floatBannerStatus = !floatBannerStatus;
            $(".afe-static-banner").toggle();
            $(".afe-floating-banner").toggle().addClass("afe-fixed");
          }
        });
      }
      
    });
