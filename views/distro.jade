extend ./templates/layout.jade

block title
  | AOSC OS Downloads - AOSC
block append stylesheet
  link(rel='stylesheet', href='assets/css/distro.css')

mixin systemRequirement(faicon, text)
  p
    span.afe-card-sysreq-icon(class='fa '+ faicon)
    span.afe-card-sysreq-text=text
block content
  .afe-bigbanner-non-index: .container: .row
    .col-md-12
      h1 AOSC OS
      p Simplified Linux computing starts right here.
  #wrapper: .container: .row
      each distros in params.distro
        .col-xs-12: .afe-card.clearfix
          div
            .afe-card-banner(style="background-image: url(#{distros.screenshot})")
            .col-md-7.col-lg-6.col-lg-offset-1.col-sm-12
              h2 AOSC OS with #{distros.desktop}
              p Core version: #{distros.core}
            .col-md-5.col-lg-4.col-sm-12
              a.afe-card-distro-dl.btn.btn-primary.btn-block(href="#{distros.url}") DOWNLOAD
              code.afe-hash.label.label-default=distros.checksum
          .col-xs-12: hr
          .col-md-6.col-lg-5.col-lg-offset-1.col-sm-12: .afe-card-text
            p=distros.description
            .afe-card-sysreq
              +systemRequirement('fa-bar-chart', distros.processor)
              +systemRequirement('fa-database', distros.ram)
              +systemRequirement('fa-hdd-o', distros.hdd)
              +systemRequirement('fa-laptop', distros.machine)
          .col-md-4.col-md-offset-2.col-lg-4.col-lg-offset-1.hidden-sm.hidden-xs
            img.afe-card-distro-logo(src="#{distros.logo}")
