extend templates/master.jade

block banner
  .row
    .col-md-12.text-center
      h1 AOSC
      h2 WELCOME IN
    .col-md-offset-3.col-md-6.text-center
      p.
         We are a group of free and open technology enthusiasts working hard for improvements.

block content
  .row
    .col-md-8
      h4(style="padding-left: 4rem;") LASTEST NEWS
      ul.afe-main
        each val, index in params.broadcast
          li(style="list-style-type: none;" class="afe-tag-"+val.type): .afe-main-item
            if index<5
              h3=val.title
              p.afe-main-item-subtitle=val.date
              .afe-main-item-body
                each para in val.content
                  !=para
              hr
            else if index<8
              a(href="#")
                h3=val.title
                hr
            else if index>=8
              li
                a(href="#")
                  h4 "read more..."
    .col-md-4
