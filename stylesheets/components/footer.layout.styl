@import '../functions/layout.styl'

.afe-footer-fixed footer
	position: fixed
	right: 0
	left: 0
	bottom: 0
	z-index: -200
	opacity: 1

footer
	opacity: 0
	paper-layer: 1
	padding: 3rem 0
	ul
		padding-left: 0
		margin-bottom: 25px
		li
			font-size: small
	h3
		margin: 1.5rem 0
	p
		margin: 0
		margin-bottom: 0.5px
		padding: 0
		font-size: x-small
	.afe-ack-logos img
		width: 100%
		margin-bottom: 10px
	.afe-footer-logo
		width: 100%
		height: 100%
		max-width: 80px
		max-height: 80px
	blockquote
		text-align: center
