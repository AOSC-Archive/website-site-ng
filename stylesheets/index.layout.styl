@import 'functions/layout.styl'

.afe-bigbanner button
	width: 100%

.afe-news
	.afe-news-container
		h3
			font-size: large
			font-weight: bold
			margin: 0
		padding-top: 0.5rem
		width: 100%
		.afe-news-info
			font-size: small
		.afe-news-body p
			margin: 0 0 0.5rem
			&:last-of-type
				margin: 0

/* //// projects list //// */
.afe-prjs li img
	width: 50px
	height: 50px
	margin: 0.5rem 0

.afe-prjs-body
	padding: 10px 0
	margin: 2px 0 0 60px
	h3
		font-size: medium
		margin: 0
	p
		font-size: small
		margin: 0
		min-height: 30px
		max-height: 30px
		overflow: hidden
		height: auto
		transition: all 200ms
	&:hover p
		max-height: 10rem
