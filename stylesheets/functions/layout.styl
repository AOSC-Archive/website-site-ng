paper-layer(layer, position=relative)
	position: position
	z-index: layer

font-sans-serif()
	font-family: "Open Sans", "Noto Sans", "Montserrat", "Segoe UI", "Lucida Grande", Helvetica, Arial, "Microsoft YaHei", FreeSans, Arimo, "Droid Sans", "wenquanyi micro hei", "Hiragino Sans GB", "Hiragino Sans GB W3", FontAwesome, sans-serif;

font-serif()
	font-family: "Sanchez", FontAwesome, serif;

.afe-left-and-right-receptor
	&:nth-child(odd)
		.afe-left-and-right-effector
			float: left
			&.afe-inverse
				float: right
	&:nth-child(even)
		.afe-left-and-right-effector
			float: right
			&.afe-inverse
				float: left
