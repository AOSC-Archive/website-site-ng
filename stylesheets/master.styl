/*
 * I am the master stylesheet which will be applied on all pages.
 *
 */

@import "variables.include.styl"

.afe-sub-banner
  background-color: #cdcdcd
  position: absolute
  width: 100%
  left: 0
  margin: 0
  padding: 0
  .row
    padding: 10px $side-padding
  ul
    list-style-type: none
    padding: 0
    margin: 0
    li
      display: inline-block
      padding:  10px 10px 10px 0
  img
    width: 65px
    height: 65px

.afe-sub-banner-padding
    height: 85px

.afe-small-captions
  font-size: 18px
  font-weight: normal
  margin: 10px 0 20px
  &.afe-important
    color: $color-contrastive

.afe-nav
  border: none
  ul
    float: none
  li
    display: inline-block
    font-size: 14px
    text-align: center

    &:nth-of-type(2)
      a
        margin-left: $navs-padding

    &.afe-primary
      margin-left: -15px // = Bootstrap: @grid-gutter-width / -2
      float: left
      font-size: 18px
      min-width: $navs-first-last-min-width
      a, a:hover, a:focus
        background-color: darken($color-primary, 40%)

    &.afe-highlight
      margin-right: -15px // = Bootstrap: @grid-gutter-width / -2
      float: right
      font-size: 18px
      min-width: $navs-first-last-min-width
      a, a:hover, a:focus
        background-color: $color-contrastive

.afe-banner
  position: relative
  z-index: 100

.afe-banner > div
  background-color: $color-primary
  color: white

.afe-static-banner
  position: relative
  width: 100%
  z-index: 100
  min-height: $banner-min-height
  .row
    padding: $banner-padding-vertical * 0.7 $side-padding $banner-padding-vertical * 1.3
    h1, h2, h3, p
      margin: 5px 0 // override the margin setting of Bootstrap
    h1.afe-index-title
      font-size: $banner-h1-size * 1.5
    h1
      font-size: $banner-h1-size
      font-weight: 600
    h2
      font-size: $banner-h1-size * 0.4
      font-weight: 400
    h3
      font-size: $banner-h1-size * 0.3
      font-weight: 400
    p
      margin-top: 25px

.afe-floating-banner
  display: none
  position: absolute
  z-index: 200
  width: 100%
  bottom: 0
  opacity: 0.9
  min-height: $floating-banner-min-height
  &.afe-fixed
    position: fixed
    bottom: auto
  .row
    padding: 5px $side-padding // same as ".afe-banner .row"

.afe-body
  >.container>.row
    padding: $body-padding-vertical $side-padding
    background-color: $gray-lighter

#wrapper, .afe-wrapper.row
  padding-top: $wrapper-padding-top

.afe-footer
  height: $footer-height
  color: $gray-base
  font-size: 12px
  background-color: darken($color-primary, 40%)
  span
    line-height: @height
    margin-right: 2em
    &:last-type
      margin-right: 0

body
  color: $color-primary // text color
  background-color: $gray-lighter // for dynamic banner
  padding-top: $navbar-height // = Bootstrap: @navbar-height
  padding-bottom: $footer-height
  a
    color: $color-primary
