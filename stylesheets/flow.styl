
@import "variables.include.styl"
@import "fonts.include.styl"

ul.afe-flow
  padding-left: 0
  li
    margin: 20px 0
    list-style-type: none
    border-left-style: solid
    border-left-width: 15px
    border-left-color: $color-blue
    padding-left: 30px
    h1
      font-size: 20px
      font-weight: bold
      margin-top: 0
      small
        display: block
        color: $color-dark-grey
        margin-top: 10px
    .afe-content
      p
        color: $color-blue
      a
        color: $color-magenta
