/*
 * I implement the style of the "flow".
 *
 * Usage:

  ul.afe-flow
    li
      h1=TITLE-1
        small=SUB-TITLE-1
      .afe-content
        p Some paragraphs.
        p Some paragraphs.

 */

@import "variables.include.styl"

ul.afe-flow
  padding-left: 0
  list-style-type: none
  >li
    position: relative
    margin: 20px 0
    border-left-style: solid
    border-left-width: 15px
    border-left-color: $color-primary
    &.afe-tag-bug
      border-left-color: $color-contrastive
      h1.afe-title
        color: $color-contrastive
    padding-left: 20px
    h1.afe-title
      font-size: 20px
      font-weight: bold
      margin-top: 0
      small
        display: block
        color: $gray-darker
        margin-top: 10px
    .afe-cover
      float: left
      margin: 0 20px 20px 0
      width: 200px
    .afe-anchor
      display: block
      position: absolute
      top: -1 * ($navbar-height + 20px)
      visiblity: hidden
    .afe-popup-content-icon
      display: inline-block
      margin: -2px 0.5em 0
      vertical-align: text-top
      opacity: 0.8
      img
        max-height: 0.75em
        max-width: 2em
      &:hover
        opacity: 1
