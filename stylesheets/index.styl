@import 'index.layout.styl'
@import 'functions/decorations.styl'

.afe-news-tag-news .afe-news-container {
	border-color: #35C2FF;
}
.afe-news-tag-news .afe-news-body p:first-of-type:before {
	color: #35C2FF;
	content: "aosc@web /news $ ";
	font-weight: 800;
	font-size: normal;
}
.afe-news-tag-bug .afe-news-container {
	border-color: #FF8A27;
}
.afe-news-tag-bug .afe-news-body p:first-of-type:before {
	color: #FF8A27;
	content: "aosc@web /news ! ";
	font-weight: 800;
	font-size: normal;
}

.afe-news .am-badge {
	background-color: #fafafa;
	color: #888;
}
.afe-news-container {
	width: 100%;
	margin-left: 0;
	padding-left: 1rem;
	border-width: 0;
	border-left-style: solid;
	border-left-width: 0.8rem;
}
.afe-news-date {
	color: #aaa;
}

.afe-prjs-body
	p
		opacity: 0
	&:hover p
		opacity: 1
