.afe-about h3 {
	font-size: small;
	margin: 0 0 1rem;
}
.afe-about-body p {
	margin: 0 0 1rem;
	font-size: small;
	text-align: justify;
}
.afe-about-container {
	width: 100%;
	margin-left: -2rem;
	padding-left: 1.2rem;
	border-width: 0;
	border-left-style: solid;
	border-left-width: 0.8rem;
}
.afe-about-tag-warning .afe-about-container {
	border-color: #FF8A27;
}
.afe-about-tag-warning .afe-about-body p:first-of-type:before {
	color: #FF8A27;
}
.afe-about-tag-info .afe-about-container {
	border-color: #35C2FF;
}
.afe-news-tag-info .afe-about-body p:first-of-type:before {
	color: #35C2FF;
}
