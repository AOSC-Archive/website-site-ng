/* ---- Project Selector ---- */
.afe-projects-horizon {
  display: inline-block;
  margin-top: 25px;
  margin-bottom: 25px;
}
.afe-projects-logo-horizon {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  margin-left: 40px;
  margin-right: 40px;
  position: relative;
  display: block;
  transition: all 100ms ease;
  top: 10px;
}
.afe-projects-logo-horizon:hover {
  border-radius: 50%;
  margin-left: 40px;
  margin-right: 40px;
  position: relative;
  display: block;
  transition: all 100ms ease;
  transform: scale(1.3);
  top: 10px;
}
.afe-projects-name {
  text-align: center;
  margin-top: 10px;
  opacity: 0;
}
.afe-projects-name:hover {
  text-align: center;
  margin-top: 10px;
  opacity: 1;
}
.afe-projects-centered {
    float: none;
    margin: 0 auto;
}
.afe-projects-details {
  margin-top: 40px;
  text-align: center;
}
