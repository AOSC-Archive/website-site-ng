@import 'common.layout.styl'
@import 'functions/decorations.styl'

body
	background-color: #fff

#wrapper
	color: #1F1F1A
	background-color: #fff
	paper-shadow: white

.afe-littlecaption
	color: #aaa
	margin-top: 30px

.afe-main-item
	width: 100%
	margin-left: 0
	padding-left: 1.6rem
	border-width: 0
	border-left-style: solid
	border-left-width: 0.4rem
	.afe-main-item-subtitle
		color: #aaa

@keyframes blinking
	0%
		color: transparent
	50%
		color: transparent
	51%
		color: black
	100%
		color: black

button, .btn, nav li a
	border-radius: 0
	transition: all .1s ease

.afe-sans-serif
	font-sans-serif()

.afe-serif
	font-serif()


@import 'components/header.styl'
@import 'components/banner.styl'
@import 'components/footer.styl'
@import 'components/side.styl'
