@import 'common.layout.styl'
@import 'functions/decorations.styl'

#wrapper
	color: #1F1F1A
	background-color: #fff
	.am-g
		background-color: inherit

.afe-littlecaption
	color: #aaa

am-setBtnColor(name, default, hover, active, fontcolor=#ffffff)
	.am-btn-{name}
		background-color: default
		&:hover, &:focus
			background-color: hover
		&:active, .am-active
			background-color: active
		&, &:visited, &:hover, &:focus, &:active, .am-active
			color: fontcolor
.am-btn
	border: none
	transition-duration: 100ms 100ms

am-setBtnColor(default, #19a7f0, #61BFEF, #0e93d7)
am-setBtnColor(primary, #19a7f0, #61BFEF, #0e93d7)
am-setBtnColor(secondary, #3bb4f2, #19a7f0, #0e93d7)

@import 'components/header.styl'
@import 'components/banner.styl'
@import 'components/footer.styl'
